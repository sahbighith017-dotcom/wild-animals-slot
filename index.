<script>
const animals = ["ü¶Å","üêØ","üêµ","üêº","üê∫","üê∏"];

function spin(){
  const spinSound = document.getElementById("spinSound");
  const winSound  = document.getElementById("winSound");

  spinSound.play();

  document.getElementById("result").textContent="";

  let s1 = document.getElementById("s1");
  let s2 = document.getElementById("s2");
  let s3 = document.getElementById("s3");

  s1.style.animation = s2.style.animation = s3.style.animation = "spin .4s linear infinite";

  setTimeout(()=>{
    let a1 = animals[Math.floor(Math.random()*animals.length)];
    let a2 = animals[Math.floor(Math.random()*animals.length)];
    let a3 = animals[Math.floor(Math.random()*animals.length)];

    s1.textContent=a1;
    s2.textContent=a2;
    s3.textContent=a3;

    s1.style.animation = s2.style.animation = s3.style.animation = "none";

    if(a1===a2 && a2===a3){
      winSound.play();
      document.getElementById("result").textContent="üéâ YOU WIN!";
    }else{
      document.getElementById("result").textContent="‚ùå Try again";
    }
  },1200);
}
</script>

